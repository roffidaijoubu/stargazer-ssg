<section id="heroSlider" class="bg-glow">
    <div class="slideshow py-4 relative">
        {% for article in articles %}
            <div class="slide-item">
                <a href="/article/{{article.article_slug.stringValue}}" class="content overflow-hidden">
                    {# <img src="{{article.article_thumbnail.stringValue}}" alt="{{article.article_title.stringValue}}" class="h-full w-full object-cover"> #}
                    <img src="/assets/img/dummy.png" alt="{{article.article_title.stringValue}}" class="h-full w-full object-cover">
                </a>
            </div>
        {% endfor %}

    </div>
</section>

<section id="about" class="mx-auto container text-center p-8">
    <h2 class="text-h2 header-underline mx-auto">About</h2>
    <div class="flex flex-col gap-4 py-4 text-neutral mt-8">
        <p>We are STARGAZER Studio, a creative agency building a safe channel for creative freedom.</p>
        <p>We have the perfect person for any of your specific needs. Work with us.</p>
    </div>

    <div class="flex gap-4 mt-8 items-center justify-center">
        <a href="/talents.html" class="btn btn-secondary">Look for Talent</a>
        <a href="/talents.html" class="btn bg-white">Learn More</a>
    </div>
</section>

<section class="md:flex py-8">
    <div id="contents" class="w-full px-8 md:mb-0 mb-8 md:px-16 md:max-w-[576px] md:ml-auto">
        <h2 class="text-h2 mb-4">ARTICLES</h2>
        <div class="md:grid grid-cols-2 gap-4">
            {% for article in articles %}
                {% if loop.index <= 4 %}
                <div class="w-[260px] md:w-[240px] mr-4">
                    {# <img src="{{ article.article_thumbnail.stringValue }}" alt="" class="object-cover bg-gray-200 border-0 w-full h-[160px] md:h-[135px] mb-[10px]"> #}
                    <img src="/assets/img/dummy.png" alt="" class="object-cover bg-gray-200 border-0 w-full h-[160px] md:h-[135px] mb-[10px]">
                    <div class="flex md:flex-row flex-col items-start md:justify-between md:items-center">
                        <p class="font-bold">{{ article.article_title.stringValue }}</p>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
            
           
        </div>
        


    </div>
    <div id="talents" class="w-full md:max-w-[576px] md:mr-auto md:px-16 px-8 md:mb-0 mb-8">
        <h2 class="text-h2 mb-4">TALENTS</h2>
        <p>With various skills that our talents can provide, weâ€™ll have everything that you need.</p>
        <div class="py-4 flex flex-col gap-4">
            {% for tag in tags %}
                {% if tag.tag_member.arrayValue %}
                    <div class="px-8 flex gap-8 items-center">
                        <div class="text-4xl text-secondary font-bold">{{ tag.tag_member.arrayValue | length}}</div>
                        <div class="text-xl">{{ tag.tag_name.stringValue }}</div>
                    </div>
                {% endif %}

            {% endfor %}

        </div>
        <div class="block w-full mt-4">
            <a href="/talents.html" class="btn bg-white flex w-fit mx-auto">Contact Us</a>
        </div>
    </div>
</section>